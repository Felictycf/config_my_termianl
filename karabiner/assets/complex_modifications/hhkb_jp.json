{
  "title": "HHKB Final Request (` and ~)",
  "rules": [
    {
      "description": "Cmd+Esc 输出反引号 (`), Cmd+Ctrl+Tab 输出波浪号 (~)",
      "manipulators": [
        {
          // 规则 1: Command + Esc -> `
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              // 这里排除了 control，确保只想打反引号时不会误触下面的规则
              "optional": [
                "caps_lock",
                "option"
              ]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde"
            }
          ]
        },
        {
          // 规则 2: Command + Control + Tab -> ~
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              // 必须同时按下 command 和 control
              "mandatory": [
                "command",
                "control"
              ],
              "optional": [
                "caps_lock",
                "option"
              ]
            }
          },
          "to": [
            {
              // 波浪号需要加上 shift 修饰符
              "key_code": "grave_accent_and_tilde",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        }
      ]
    }
  ]
}
